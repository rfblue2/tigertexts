{
  "name": "tigertexts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./server/bin/www",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "prod": "yarn run heroku-postbuild && yarn start",
    "server": "./node_modules/.bin/nodemon ./server/bin/www",
    "client": "cd client && yarn start",
    "lint": "./node_modules/.bin/eslint --fix ./server/**/*.js ./client/src/**/*.js",
    "test": "NODE_ENV='test' NODE_CONFIG_DIR='./server/config' mocha --require @babel/register 'server/test/**/*.js'",
    "heroku-postbuild": "cd client && yarn install && yarn run build"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/polyfill": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/preset-stage-0": "^7.0.0-beta.44",
    "@babel/register": "^7.0.0-beta.44",
    "body-parser": "~1.18.2",
    "config": "^1.30.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "isomorphic-fetch": "^2.2.1",
    "jade": "~1.11.0",
    "jsonapi-serializer": "^3.5.6",
    "mongoose": "^5.0.11",
    "mongoose-express-error-handler": "^1.0.6",
    "morgan": "~1.9.0",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "concurrently": "^3.5.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "mocha": "^5.0.5",
    "nodemon": "^1.17.2"
  }
}
